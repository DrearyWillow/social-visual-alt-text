{
  "name": "Social visual alt text",
  "description": "Visually show alternative text of social media images",
  "version": "0.3",
  "manifest_version": 3,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://www.instagram.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://twitter.com/", "https://www.instagram.com/"],
  "icons": {
    "16": "/images/visual-alt-16.png",
    "32": "/images/visual-alt-32.png",
    "48": "/images/visual-alt-48.png",
    "128": "/images/visual-alt-128.png"
  }
}
